using Serilog;
using Serilog.Formatting.Json;

namespace OnlineShop.Services;

public static class LoggerService
{
    public static void SerilogLoggerService(
        this IServiceCollection services,
        ConfigurationManager config
    )
    {
        Log.Logger = new LoggerConfiguration().ReadFrom.Configuration(config).CreateLogger();
        services.AddSerilog();
    }

    public static void SerilogLoggerServiceGlobal(
        this IHostBuilder host,
        IServiceCollection services,
        ConfigurationManager cfg
    )
    {
        // WARN: it doesn't work properly and i have no idea why
        /* Log.Logger = new LoggerConfiguration().ReadFrom.Configuration(cfg).CreateBootstrapLogger(); */

        host.UseSerilog(
            (context, config) =>
            {
                config
                    .MinimumLevel.Information()
                    .WriteTo.Console()
                    .WriteTo.File(
                        new JsonFormatter(),
                        "./Logs/log1-.json",
                        rollingInterval: RollingInterval.Day
                    );
            }
        );
    }
}
